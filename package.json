{
  "name": "company-messenger",
  "version": "1.0.0",
  "description": "Company Internal Messenger",
  "author": "Company",
  "main": "public/electron.js",
  "homepage": "./",
  "private": true,
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "styled-components": "^6.1.0",
    "electron-is-dev": "^2.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/styled-components": "^5.1.26",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "typescript": "^4.9.5"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "electron": "electron .",
    "electron-dev": "set ELECTRON_IS_DEV=true && electron .",
    "dist": "npm run build && electron-builder --win --publish=never",
    "build-installer": "npm run build && electron-builder --win --publish=never"
  },
  "build": {
    "appId": "com.company.messenger",
    "productName": "사내메신저",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "public/electron.js"
    ],
    "win": {
      "target": {
        "target": "nsis",
        "arch": ["x64"]
      },
      "requestedExecutionLevel": "asInvoker",
      "publisherName": "Company"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "사내메신저",
      "deleteAppDataOnUninstall": true,
      "runAfterFinish": true,
      "menuCategory": "Communication"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}